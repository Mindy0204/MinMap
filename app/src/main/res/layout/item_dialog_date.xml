<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_16dp">

    <TextView
        android:id="@+id/dialog_date_text"
        style="@style/dialog_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022-11-13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:background="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_date_text"
        app:layout_constraintEnd_toStartOf="@+id/dialog_date_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_date_text" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:background="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_date_text"
        app:layout_constraintTop_toTopOf="@+id/dialog_date_text" />
</androidx.constraintlayout.widget.ConstraintLayout>